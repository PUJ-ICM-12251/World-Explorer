<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LugarActivity"
    android:background="@color/simplebackgroundcolor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/purple_500"
        android:gravity="center"
        android:text="Lugar"
        android:textColor="#FFFFFF"
        android:textSize="40sp"/>

    <ImageView
        android:layout_width="600px"
        android:layout_height="600px"
        android:src="@drawable/camara"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/nombreLgr"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:text="nombre del lugar"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#F8F8F8" />

    <TextView
        android:id="@+id/longitud"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:text="longitud del lugar"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <TextView
        android:id="@+id/latitud"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:text="latitud del lugar"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="regresar"
        android:layout_centerHorizontal="true"
        android:onClick="onclick"/>

</RelativeLayout>